<!DOCTYPE html>
<html>
  <head>
    <title><%= locals.title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
	 <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
	 <script type="text/javascript" src="/javascripts/jquery-1.8.1.min.js"></script>	  
	
  </head>
  <body>
  <nav class="navbar navbar-inverse" role="navigation">
       <div class="container">
	       <div class="navbar-header">
		       <a class="navbar-brand" href="/">Microblog</a>
		   </div>
	       
            
			<div class="collapse navbar-collapse">
			   <ul class="nav navbar-nav">
			        <li class="active"><a href="/">Home Page</a></li>
				    <% if(!locals.user){ %>
					<li><a href="/login">Login</a></li>
					<li><a href="/reg">Register</a></li>
				    <% }else{ %>
					<li><a href="/logout">Logout</a></li>
					<% } %>
			   </ul>
			   <% if(locals.user){ %>
			   <div class="userinfo">
			      Welcome  <%= locals.user.name%>
			   </div>
			   <% } %>
			</div>
       </div>
     </nav>
     
	 <div class="container" id="container">
	 <% if(locals.success){ %>
	    <div class="alert alert-success" style="background-color:rgba(223,240,216,0.9);">
	       <%= locals.success%>
	    </div>
	  <% } %>
	  <% if(locals.error){ %>
	  <div class="alert alert-error" style="background-color:rgba(204,28,5,0.5);"> 
	     <%= locals.error%>
	  </div>
	  <% } %>
     <%- body%>
	  <hr />
		 <footer>
		    <div class="copyright">@2014&nbsp;&nbsp;<a href="/">Microblog</a></div>
		 </footer>
	 </div>
 <script type="text/javascript">
          
      $(function(){
      	function hideAlert(){
      	   $(".alert").hide();
        }
        setTimeout(hideAlert,3000);	
      });
 </script>

   
  <script type="text/javascript" src="/javascripts/bootstrap.min.js"></script>
  </body>
</html>