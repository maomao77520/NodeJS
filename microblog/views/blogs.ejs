<div class="blogs-list">
<% locals.blogs.forEach(function(blog,index){
    if(index % 3 == 0){ %>
    <div class="row list-row ">
    <% } %>
    <div class="col-md-4 blog-content clearfix">
        <h3><a href="/u/<%= blog.username %>"><%= blog.username%></a> Say</h3>
        <div class="border">
            <time pubdate class="pubtime"><%= blog.time%></time>
            <p class="detail"><%= blog.text %></p>
        </div>
        <div class="a"><div class="b"></div></div>
    </div>
    <% if(index % 3 ==2){ %>
        </div>
    <% } %>   
<% });%>
<% if(locals.blogs.length % 3 != 0){ %>
    </div>
<% } %>
</div>